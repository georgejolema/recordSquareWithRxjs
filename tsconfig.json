{
    "compilerOptions": {
      "target": "es5",                      
      "module": "es2015",                   
      "lib": ["es2017",
        "dom"],                             
       "sourceMap": true,                   
      "strict": true,
      "strictNullChecks": false,
      "strictPropertyInitialization": false,
       "moduleResolution": "node",
       "typeRoots": ["node_modules/@types/"],
       "types": ["node"],
      "esModuleInterop": true,
       "experimentalDecorators": true,
       "emitDecoratorMetadata": true,
    },
    "exclude": [
      "node_modules"
    ]
  }